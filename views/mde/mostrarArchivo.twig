    } */

</script>
{% endblock %}

{% block modalHeader %}
    <div class="modal-header">
        <div class="title" style="">DOCUMENTACION</div>
        <div class="actions">
            <button onclick="cerrarModal();" title="Cancelar"><i class="fas fa-times"></i></button>
        </div>
    </div>
{% endblock %}

{% block appBody %}
    <h3 class="text-center mt-3">ARCHIVO ADJUNTADO: "{{documento}}"</h3>
    <div class="img-wrapper">
    {% set extension = documento|slice(-3) %}
        {% if extension|lower == 'pdf' %}
            <iframe src="data:application/pdf;base64,{{urlIframe}}" height="500px" width="100%" style="border: 0;" type:"application/pdf"></iframe>
        {% elseif extension|lower == 'jpg' or extension|lower == 'png' %}
            <img class="img-modal" src="data:image/jpeg;base64,{{urlIframe}}" height="500px" width="100%" style="border: 0;" type:"application/jpg">
        {% elseif extension|lower == 'peg' %}
            <img class="img-modal" src="data:image/jpeg;base64,{{urlIframe}}" height="500px" width="100%" style="border: 0;" type:"application/jpeg">
        {% else %}
            <div>{{documento}} is not a PDF, JPG or PNG file.</div>
        {% endif %}
    </div>
{% endblock %}
