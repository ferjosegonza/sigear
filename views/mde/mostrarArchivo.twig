{% extends "extends/modal.twig"%}

{% block style %}
    <style>
    .img-wrapper {
        padding: 2rem;
    }
        .img-modal {
            max-height: 500px;
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
    </style>
{% endblock %}

{% block script %}
<script>/*
    APP.state = new function () {
        const state = this;
